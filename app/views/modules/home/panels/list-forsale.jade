						label est. value
					th 
						label.sources-sprite(source="GoDaddy")
					th 
						label.sources-sprite(source="Sedo")
					th 
						label.sources-sprite(source="Afternic")
					th 
						label.sources-sprite(source="Protrada")
			tbody
				tr
					td 
