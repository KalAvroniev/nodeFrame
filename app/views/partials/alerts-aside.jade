aside.scrollfix

	header.alerts-header
		#live-help-logo.ff-icon-after.ff-icon help live
		#live-help-info
			| Chat with our support staff 
			a(href="#") online now
		#live-help-status.ff-icon-before.online

	#notifications.tiny-scrollbar-vert
		.scrollbar
			.track
				.thumb
					.end
		.viewport
			.overview
				
				h3#h3-alerts-title.ff-icon-before
					strong Important 
					| messages
				
				p
					| This is your system-wide activity feed.
					
					br
					
					| Check this list for items requiring action from you, or for
					
					| updates on things that the system has done for you. 
					
					a#hide-activity-descr(href='') Hide this 
				
				section#tabbed-alert-msgs
					
					ul#alert-msgs.nav.nav-tabs
						li.devname.center
							a.ff-icon-before(href='#devname-msgs')
								span.alert-count(data-alerts='0',title='origin of alerts') 
						li.active.protrada.left
							a.ff-icon-before(href='#protrada-msgs')
								span.alert-count(data-alerts='4',title='origin of alerts') 
						li.archive.right
							a.ff-icon-before(href='#archive-msgs')
					
					.tab-content
						
						#protrada-msgs.tab-pane.no-alerts.active
							h4
								strong protrada 
								| notifications
							
							
							// article alerts here
						
							.alerts-listing
								// default content
								article.ff-icon-before.alert-msg
									header
										h1 there are no alerts
									p just at the moment
								
								article.ff-icon-before.alert-msg
									header
										h1 Currently there are no alerts to show here
									p
										| This area will become populated with msg's as the system starts performing actions / automated procedures on your behalf. This includes things like bidding, watching and dns monitoring.
						
						
						#devname-msgs.tab-pane.no-alerts
							h4
								strong devname 
								| notifications
							
							// article alerts here
							
							.alerts-listing
							
								// default content
								article.ff-icon-before.alert-msg
									header
										h1 there are no alerts
									p just at the moment
								
								article.ff-icon-before.alert-msg
									header
										h1 Currently there are no alerts to show here
									p
										| This area will become populated with msg's as the system starts performing actions / automated procedures on your behalf. This includes things like bidding, watching and dns monitoring.							
							
							
						#archive-msgs.tab-pane
							h4
								strong archived 
								| notifications
							
							
							#archive-summary
								h1 
									strong archive 
									| summary
								
								ul#section-summary.clearfix
									li
										h3
											strong trading 
											| system alerts

										span.archive-count 256
										span.ff-icon-before.messages messages
									
									li
										h3
											strong monetization 
											| system alerts

										span.archive-count 60
										span.ff-icon-before.messages messages										
								a(href="").goto-full-archive.ff-icon-before goto full 
									u archive listing
							
								
							form#quicksearch-archive.well.clearfix
							
								h3#qs-title.ff-icon-before 
									strong quick 
									| search the archive
								
								input#archive-quicksearch(value="", placeholder="search term _")
								
								#archive-section-selection.btn-group.dropup
									a.btn.dropdown-toggle(data-toggle="dropdown", href="")
										| all
										span.caret
									ul.dropdown-menu
										li
											a(href="") trading alerts only
										li
											a(href="") monetization alerts only

								button.btn.btn-success.btn-large.ff-icon-before(type="submit") Submit							
							
							#matchin-results
								h1 
									matching alerts for 
									strong 'search-term'
							
							
							
							
							
							
							
		#aside-inset-shadow
		
		
		
		
		
		